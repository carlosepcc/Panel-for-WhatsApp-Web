{
    "manifest_version": 2,
    "name": "WhatsAppPanel",
    "version": "1.0",

    "description": "Panel for easy access to WhatsAppâ„¢ Web",

    "icons": {
        "48": "icons/icon.svg",
        "96": "icons/icon.svg"
    },
    
    "browser_action": {
        "default_icon": "icons/icon.svg",
        "default_title": "WhatsAppPanel",
        "default_popup": "html/popup.html"
    },
    
    "content_scripts": [
        {
            "matches": ["https://web.whatsapp.com/*"],
            "js": ["js/inject.js"],
            "all_frames": true,
            "run_at": "document_end"
        }
    ],
    
    "background": {
        "page": "html/background.html"
    },

    "permissions": [
        "https://web.whatsapp.com/*",
        "webRequest",
        "webRequestBlocking"
    ]
}
